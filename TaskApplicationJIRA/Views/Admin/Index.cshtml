@{
    ViewData["Title"] = "Admin Control Panel";
}

<div class="container-fluid px-0">
    <div class="row gx-0">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-light border-end vh-100 p-4">
            <h4 class="fw-bold text-primary mb-4">Admin Control Panel</h4>
            <nav class="nav flex-column gap-2">
                <a class="nav-link" asp-action="Index" asp-controller="Category">Category</a>
                <a class="nav-link" asp-action="Index" asp-controller="Priority">Priority</a>
                <a class="nav-link" asp-action="Index" asp-controller="Task">Task</a>
                <a class="nav-link" asp-action="Index" asp-controller="User">User</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-9 col-lg-10 p-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="fw-bold">Admin Control Panel</h1>
                    <p class="lead text-muted">Welcome to the admin control panel.</p>
                </div>
                @if (ViewBag.CurrentSection != null)
                {
                    <a class="btn btn-primary" asp-action="Create" asp-controller="@ViewBag.CurrentSection">+ @ViewBag.CurrentSection</a>
                }
            </div>

            <!-- Render Specific Section Content Here -->
            @if (ViewBag.CurrentSection == "Category")
            {
                <!-- Category Table -->
                <partial name="_CategoryTable" model="Model.Categories" />
            }
            else if (ViewBag.CurrentSection == "Priority")
            {
                <!-- Priority Table -->
                <partial name="_PriorityTable" model="Model.Priorities" />
            }
            else if (ViewBag.CurrentSection == "Task")
            {
                <!-- Task Table -->
                <partial name="_TaskTable" model="Model.Tasks" />
            }
            else if (ViewBag.CurrentSection == "User")
            {
                <!-- User Table -->
                <partial name="_UserTable" model="Model.Users" />
            }
            else
            {
                <p>Select an option from the sidebar to begin managing your data.</p>
            }
        </div>
    </div>
</div>
