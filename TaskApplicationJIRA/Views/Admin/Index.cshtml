@{
    ViewData["Title"] = "Admin Control Panel";
    var section = ViewBag.CurrentSection as string;
}

<div class="container-fluid px-0">
    <div class="row gx-0">
     

       

            <!-- Section Content -->
            @switch (section)
            {
                case "Category":
                    <partial name="_CategoryTable" model="Model.Categories" />
                    break;
                case "Priority":
                    <partial name="_PriorityTable" model="Model.Priorities" />
                    break;
                case "Task":
                    <partial name="_TaskTable" model="Model.Tasks" />
                    break;
                case "User":
                    <partial name="_UserTable" model="Model.Users" />
                    break;
                
            }
        </main>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.min.js"></script>

    @if (TempData["LoginSuccess"] != null)
    {
        <script>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: '@TempData["LoginSuccess"]',
                confirmButtonText: 'OK'
            });
        </script>
    }
}
