@model TaskApplicationJIRA.Models.UserModel.User

@{
    ViewData["Title"] = "Login";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.0/dist/sweetalert2.min.js"></script>
</head>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow rounded-3">
                <div class="card-body">
                    <h3 class="card-title text-center mb-4">@ViewData["Title"]</h3>

                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" required type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input asp-for="Password" class="form-control" placeholder="Enter password" required type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a href="@Url.Action("Register", "Account")">Don't have an account? Register here.</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Checking if TempData contains a success or error message to display the SweetAlert
        @if (TempData["LoginSuccess"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: '@Html.Raw(TempData["LoginSuccess"])',
                        confirmButtonText: 'OK'
                    });
                </text>
        }

        @if (TempData["Error"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: '@Html.Raw(TempData["Error"])',
                        confirmButtonText: 'Try Again'
                    });
                </text>
        }
    </script>
}
