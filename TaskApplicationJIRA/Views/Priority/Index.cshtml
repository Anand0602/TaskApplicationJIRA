@model IEnumerable<TaskApplicationJIRA.Models.PriorityModel.Priority>

@{
    ViewData["Title"] = "All Priorities";
    ViewBag.CurrentSection = "Priority";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold">Priority</h1>
        <p class="text-muted">Manage all available Priorities.</p>
    </div>
    <a class="btn btn-danger" asp-action="Create">+ Priority</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-danger text-white fw-semibold">All Priorities</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Level</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var priority in Model)
                    {
                        <tr>
                            <td>@priority.Level</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@priority.PriorityId">Edit</a>
                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@priority.PriorityId">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
