@model IEnumerable<TaskApplicationJIRA.Models.CategoryModel.Category>


@{
    ViewData["Title"] = "Category";
    ViewBag.CurrentSection = "Category";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold">Categories</h1>
        <p class="text-muted">Manage all available categories.</p>
    </div>
    <a class="btn btn-primary" asp-action="Create" asp-controller="Category">+ Category</a>
</div>

<div class="card border-0 shadow-sm">
    <div class="card-header bg-warning text-dark fw-semibold">All Categories</div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            
                            <td>@category.Name</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a>
                                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
